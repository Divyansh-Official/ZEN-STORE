<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@color/CustomColor1">

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/premiumDivider"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        app:dividerColor="@color/CustomColor7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zenLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/zenLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/zen_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/formal_font_4"
        android:text="S T O R E"
        android:textColor="@color/Black"
        android:layout_marginBottom="20dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/zenLogo"
        app:layout_constraintEnd_toEndOf="@+id/zenLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>